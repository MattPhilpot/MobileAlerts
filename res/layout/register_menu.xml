<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="1">

    <ImageView
        android:contentDescription="Interface Support"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ialert_registration" 
        android:layout_margin="10dip"
        android:layout_weight=".3"
        android:scaleType="fitXY"/>
    
    <TextView 
       	android:text="Please register your client with the server before continuing"
       	android:textColor="#000000"
       	android:textSize="22dip"
       	android:gravity="center"
       	android:layout_weight=".2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
        
	<EditText
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:layout_margin="10dip"
		android:layout_weight=".12"
		android:inputType="textNoSuggestions|textVisiblePassword">
        <requestFocus />
	</EditText>
	
    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:layout_margin="10dip"
		android:layout_weight=".12"
        android:inputType="textPassword">
    </EditText>
    
    <TextView 
        android:id="@+id/isCorrect"
       	android:text=""
       	android:textColor="#FF0000"
       	android:textSize="10dip"
       	android:gravity="center"
       	android:layout_weight=".06"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
        
    <ImageButton
        android:id="@+id/largeGoldenButton"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight=".2"
	    android:layout_margin="10dip"
	    android:layout_marginTop="0dip"
	    android:background="@drawable/selector_golden_button"/>  

</LinearLayout>